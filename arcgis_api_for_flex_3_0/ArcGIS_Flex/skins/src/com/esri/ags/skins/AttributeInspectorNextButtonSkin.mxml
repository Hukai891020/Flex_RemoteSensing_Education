<!---
     The default skin class for the next button of an AttributeInspector component.
     @private
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             alpha.disabled="0.5">

    <fx:Metadata>
        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <fx:Script>
        /* Define the skin elements that should not be colorized. */
        static private const exclusions:Array = [ "nextSymbol" ];

        override public function get colorizeExclusions():Array
        {
            return exclusions;
        }
    </fx:Script>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <!-- layer 1: fill -->
    <s:Rect left="1" right="1" top="1" bottom="1">
        <s:fill>
            <s:LinearGradient rotation="90">
                <s:GradientEntry color="0xFFFFFF"
                                 color.down="0xA8A8A8"
                                 color.over="0xCACACA"/>
                <s:GradientEntry color="0xDCDCDC"
                                 color.down="0x6B6B6B"
                                 color.over="0x8D8D8D"/>
            </s:LinearGradient>
        </s:fill>
    </s:Rect>

    <!-- layer 2: One pixel stroke inside border (exclude in down) -->
    <s:Rect left="1" right="1" top="1" bottom="1"
            excludeFrom="down">
        <s:stroke>
            <s:LinearGradientStroke rotation="90" weight="1">
                <s:GradientEntry alpha.over="0.22" color="0xFEFEFE"/>
                <s:GradientEntry alpha.over="0.22" color="0xEAEAEA"/>
            </s:LinearGradientStroke>
        </s:stroke>
    </s:Rect>

    <!-- layer 3: fill highlight  (exclude in down) -->
    <s:Rect height="11"
            left="1" right="1" top="1"
            excludeFrom="down">
        <s:fill>
            <s:SolidColor alpha="0.3"
                          alpha.over="0.12"
                          color="0xFFFFFF"/>
        </s:fill>
    </s:Rect>

    <!-- layer 4: downstate inset border  (include only in down) -->
    <s:Rect height="1"
            left="1" right="1" top="1"
            includeIn="down">
        <s:fill>
            <s:SolidColor alpha="0.4" color="0x000000"/>
        </s:fill>
    </s:Rect>
    <s:Rect height="1"
            left="1" right="1" top="2"
            includeIn="down">
        <s:fill>
            <s:SolidColor alpha="0.12" color="0x000000"/>
        </s:fill>
    </s:Rect>
    <s:Rect width="1"
            left="1" top="1" bottom="1"
            includeIn="down">
        <s:fill>
            <s:SolidColor alpha="0.12" color="0x000000"/>
        </s:fill>
    </s:Rect>
    <s:Rect width="1"
            right="1" top="1" bottom="1"
            includeIn="down">
        <s:fill>
            <s:SolidColor alpha="0.12" color="0x000000"/>
        </s:fill>
    </s:Rect>

    <!-- layer 5: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
    <s:Rect width="38" height="24"
            left="0" right="0" top="0" bottom="0">
        <s:stroke>
            <s:SolidColorStroke color="0x131313"/>
        </s:stroke>
    </s:Rect>

    <!-- next symbol -->
    <s:Group id="nextSymbol"
             horizontalCenter="3"
             verticalCenter="0">

        <!-- triangle -->
        <s:Path data="M 1 0 L 1 13 L 8 7 L 1 0 Z" winding="evenOdd">
            <s:fill>
                <s:SolidColor alpha="1.0" color="0x555555"/>
            </s:fill>
        </s:Path>

    </s:Group>

</s:SparkSkin>
