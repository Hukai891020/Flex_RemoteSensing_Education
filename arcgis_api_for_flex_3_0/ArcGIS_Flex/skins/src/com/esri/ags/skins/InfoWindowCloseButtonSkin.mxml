<!---
     The default skin class for the close button component.
     @private
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:mx="library://ns.adobe.com/flex/mx"
        minHeight="18"
        minWidth="18">

    <fx:Metadata>
        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <s:states>
        <s:State name="disabled"/>
        <s:State name="down"/>
        <s:State name="over"/>
        <s:State name="up"/>
    </s:states>

    <s:BitmapImage left="0" right="0" top="0" bottom="0"
                   source="@Embed(source='../../../../assets/skins/callout_icons.swf',symbol='Callout_closeButtonUpSkin')"
                   source.disabled="@Embed(source='../../../../assets/skins/callout_icons.swf',symbol='Callout_closeButtonDisabledSkin')"
                   source.down="@Embed(source='../../../../assets/skins/callout_icons.swf',symbol='Callout_closeButtonDownSkin')"
                   source.over="@Embed(source='../../../../assets/skins/callout_icons.swf',symbol='Callout_closeButtonOverSkin')"/>

</s:Skin>
