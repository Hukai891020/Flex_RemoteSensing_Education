<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx"
               xmlns:esri="http://www.esri.com/2008/ags"
               currentState="loadingState"
               pageTitle="KMLLayer - Earthquakes">
    <!--
    This sample shows how to use the KMLLayer capability of the ArcGIS API for Flex

    The KMLLayer uses a utility service from ArcGIS.com, therefore your kml/kmz must be publicly accessible on the internet.
    http://utility.arcgis.com/sharing/kml
    http://help.arcgis.com/en/webapi/flex/apiref/com/esri/ags/layers/KMLLayer.html

    This kml file was generated by the USGS Earthquake Hazards Program website.
    http://earthquake.usgs.gov/earthquakes/catalogs/

    The contents of this file is the earthquakes of the past 7 days.
    http://earthquake.usgs.gov/earthquakes/catalogs/eqs7day-age.kmz

    -->
    <s:states>
        <s:State name="mainState"/>
        <s:State name="loadingState"/>
    </s:states>
    <fx:Style>
        @namespace s "library://ns.adobe.com/flex/spark";
        @namespace mx "library://ns.adobe.com/flex/mx";
        @namespace esri "http://www.esri.com/2008/ags";
        esri|Navigation
        {
            left: null;
            right: 20;
        }
        s|Panel
        {
            chromeColor: #403F33; 
            backgroundColor: #62696D;
            backgroundAlpha: 0.8;
            color: #FFFFFF;
        }
    </fx:Style>
    <fx:Script>
        <![CDATA[
            import com.esri.ags.events.LayerEvent;

            import mx.controls.Alert;

            protected function earthquakes_loadHandler(event:LayerEvent):void
            {
                currentState = 'mainState';
            }

            protected function earthquakes_loadErrorHandler(event:LayerEvent):void
            {
                if (event.fault)
                {
                    Alert.show(event.fault.faultDetail + "\n" + event.fault.faultString);
                }
            }
        ]]>
    </fx:Script>
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    <esri:Map id="map">
        <esri:extent>
            <esri:Extent xmin="-14646671" ymin="3421416" xmax="-7132605" ymax="6170703">
                <esri:SpatialReference wkid="102100"/>
            </esri:Extent>
        </esri:extent>
        <esri:ArcGISTiledMapServiceLayer url="http://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer"/>
        <esri:KMLLayer id="earthquakes" name="Latest earthquakes"
                       load="earthquakes_loadHandler(event)"
                       loadError="earthquakes_loadErrorHandler(event)"
                       url="http://dl.dropbox.com/u/62421751/eqs7day-age.kmz"/>
    </esri:Map>
    <s:Panel id="legendPanel"
             right="20" bottom="75"
             title="Legend"
             visible="false">
        <s:layout>
            <s:VerticalLayout paddingTop="10"/>
        </s:layout>
        <esri:Legend height="300"
                     layers="{[earthquakes]}"
                     map="{map}"/>
    </s:Panel>
    <s:Panel id="desc"
             width="400" height="80"
             left="{map.width /2 - desc.width /2}" bottom="20"
             title="NOAA KML Weather">
        <s:layout>
            <s:VerticalLayout horizontalAlign="center"
                              paddingBottom="5"
                              paddingLeft="5"
                              paddingRight="5"
                              paddingTop="5"/>
        </s:layout>
        <s:RichEditableText width="100%"
                            editable="false"
                            fontSize="14">
            Earthquakes kml/kmz: Click on a feature to see details.
        </s:RichEditableText>
        <s:ToggleButton click="{!legendPanel.visible ? legendPanel.visible = true : legendPanel.visible = false}"
                        label="{!legendPanel.visible ? 'Show Legend' : 'Hide Legend'}"
                        visible="{earthquakes.loaded}"/>
    </s:Panel>
    <s:Panel id="loadingGroup"
             width="200" height="100"
             left="{map.width /2 - loadingGroup.width /2}" top="{map.height / 2}"
             includeIn="loadingState"
             title="Please Wait">
        <s:layout>
            <s:VerticalLayout horizontalAlign="center"
                              paddingBottom="10"
                              paddingLeft="10"
                              paddingRight="10"
                              paddingTop="10"/>
        </s:layout>
        <mx:ProgressBar id="progressBar"
                        width="80%"
                        indeterminate="true"/>
    </s:Panel>
</s:Application>
